@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- main-slider -->
<section class="w3l-main-slider banner-slider" id="home">
    <div class="owl-one owl-carousel owl-theme">
        <div class="item">
            <div class="slider-info banner-view banner-top1">
                <div class="container">
                    <div class="banner-info header-hero-19">
                        <h3 class="title-hero-19">Banyonuza Şıklık ve Konfor Katmanın En İnce Detayları</h3>
                        <a href="@Url.Action("Offer", "Home")" class="btn btn-style btn-primary mt-4">Bize teklif gönderin, size geri dönelim.<i class="fas fa-angle-double-right ms-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
